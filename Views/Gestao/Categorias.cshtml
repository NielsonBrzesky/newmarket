@model IEnumerable<newmarket.Models.Categoria>
@{
    Layout = "_LayoutAdmin";
}

<script>
    $(document).ready(function () {
        $('#categorias').DataTable({
            "language": {
            "lengthMenu" : "Mostrando _MENU_ registros por página.",
            "zeroRecords" : "Desculpe não foram encontrados registros.",
            "info" : "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty" : "Nenhum registro disponível",
            "search" : "Buscar:",
            "paginate" : {
                "first" : "Primeiro",
                "last" : "Último",
                "next" : "Próximo",
                "previous" : "Anterior"
            }
            }
        });
    });
</script>

<script>
    $(document).ready(function() {
        $('#idCategorias').DataTable();
    });
</script>

<h2>Categorias</h2>
<hr>
<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success">Criar nova categoria</a>
<hr/>

<table id="categorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <body>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Categorias" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </body>
</table>

