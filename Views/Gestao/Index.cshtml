<canvas class="line-chart"></canvas>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.min.js"></script>
<script>
  var enderecoRelatorioDeVendas = "http://localhost:5063/Gestao/RelatorioDeVendas"
  var labels = []; //DATA DAS VENDAS
  var data = []; //DADOS
  $.post(enderecoRelatorioDeVendas, function(dados, status) {
    console.log(dados);
    for(var i = 0; i < dados.length; i++) {
      labels.push(dados[i].data);
      data.push(dados[i].total);
    }
    var canvas = document.getElementsByClassName("line-chart");
    //Chart.js
    var grafico = new Chart(canvas, {
      type: "line",
      data: {
        labels: labels,
        datasets: [{
          label: "Total de vendas em R$",
          data: data,
          borderWidth: 12
          borderColor: "#003399"
        }]
      }
    });
  });
</script>


